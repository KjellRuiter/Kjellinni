<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head') %>
    <link rel="stylesheet" href="css/chat.css" />
  </head>

<body class="with_nav">
    <%- include ('../partials/nav') %>
        <section>
            <% if (allUsers.length > 0) { %>
                <h2>New matches
                  <span class="number-of-matches"><%=allUsers.length%></span>
                </h2>
              <% } %>

          <ul class="new-match-container">
              <% if (allUsers) { allUsers.forEach(function(match) { %>
              <li class="new-match-container-item">
                <a href="chat/<%=match._id%>">
                  <img
                    class="new-match-image"
                    src="<%=match.photo%>"
                    alt="<%=match.name%>"
                  />
                  <p><%=match.name%></p>
                </a>
              </li>
              <% })} %>
            </ul>

          <h2>Messages:</h1>
        </section>
    <%- include ('../partials/footer') %>
</body>

</html>